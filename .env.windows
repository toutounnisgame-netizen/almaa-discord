###############################################################################
#  .env.windows
#
#  Environment variables consumed by docker-compose.windows.yml and the
#  application itself.  Adjust values as needed before running install.ps1.
#
#  Note: do not wrap values in quotes.  Secrets such as passwords and
#  API keys should be changed for your deployment.  The defaults here are
#  sufficient for local testing on an air‑gapped workstation.
###############################################################################

# -----------------------------------------------------------------------------
# Postgres configuration
POSTGRES_USER=almaa_user
POSTGRES_PASSWORD=almaa_pass
POSTGRES_DB=almaa_db

# -----------------------------------------------------------------------------
# MinIO credentials
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# -----------------------------------------------------------------------------
# Grafana admin account
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# Timezone
TZ=Europe/Paris

# -----------------------------------------------------------------------------
# JWT secret for session tokens (will be used in Phase 2)
JWT_SECRET=CHANGE_ME_SUPERSECRET

# -----------------------------------------------------------------------------
# API and WebSocket ports (internal only)
API_PORT=8000
WS_PORT=8001

# -----------------------------------------------------------------------------
# Hostnames and addresses
#
# Use host.docker.internal to reach services running directly on the
# Windows host (e.g. the native Ollama server).  You may customise
# these values if the services run on alternative ports.
OLLAMA_BASE_URL=http://host.docker.internal:11434
FRONTEND_URL=https://localhost

# ChromaDB connection for the backend
CHROMA_HOST=chroma
CHROMA_PORT=8000

# Default model to use with Ollama (can be overridden per agent)
OLLAMA_MODEL=llama3.1:8b